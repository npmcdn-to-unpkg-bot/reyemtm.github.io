---
---
[{% for post in site.posts %}
    {
      "title"    : "{{ post.title }}",
      "href"     : "{{ post.url }}",
      {% if post.subtitle %}"subtitle"      : "{{ post.subtitle }}",{% endif %}
      {% if post.tags %}"keywords"      : "{% for tag in post.tags %}{{ tag }}{% unless forloop.last %},{% endunless %}{% endfor %}",{% endif %}
      "date"     : {
         "day"   : "{{ post.date | date: "%d" }}",
         "month" : "{{ post.date | date: "%B" }}",
         "year"  : "{{ post.date | date: "%Y" }}"
      }
    },{% endfor %}{% for page in site.pages %}{% if page.title %}
    {
      "title"    : "{{ page.title }}",
      "href"     : "{{ page.url }}",
      {% if page.subtitle %}"subtitle"      : "{{ page.subtitle }}",{% endif %}
      {% if page.date %}"date"      : {
         "day"   : "{{ page.date | date: "%d" }}",
         "month" : "{{ page.date | date: "%B" }}",
         "year"  : "{{ page.date | date: "%Y" }}"
      }{% endif %}{% endif %}
    }
    {% unless forloop.last %},{% endunless %}
    {% endfor %}
]
